<script src="/js/home/home.js" charset="utf-8"></script>

<style media="screen">
input[type=search] {
width: 130px;
-webkit-transition: width 0.4s ease-in-out;
transition: width 0.4s ease-in-out;
color: white !important;
}
/* Cuando esta seleccionado el input su ancho cambia a 100% */
input[type=search]:focus {
  width: 90%;
}
</style>
<script>
$(function(){

   $('#searchsite').on("change paste keyup",function(){
    var search=$('#searchsite').val();
    //console.log(search);
    if(search==''){
      $('#sitesContainer > div').fadeIn(450);
    }else{
      //if(){}
      //console.log(txtValue);
      var select=$('.'+search).fadeIn(450);
      $('#sitesContainer > div').not(select).hide();
    }
  });
//---------------------------


});
</script>
