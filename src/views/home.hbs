<div id="modalEscoger" class="modal fade" tabindex="-1" role="dialog">
<div class=" ">
<div class="modal-dialog"  >
  <div class="modal-content" style="background:transparent;">
    <div class="modal-header d-flex mx-auto" style="background:transparent; border:none;">
      <h3 class="text-white"> Sitios disponibles </h3>
      <button type="button" class="close" data-dismiss="modal" name="button">
        <span class="text-white" aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="row">
    <input id="searchsite" class="form-control mr-sm-2 border-primary" type="search" placeholder="Search" aria-label="Search" style="background:transparent;">
    </div>
    <div id="sitesContainer"class="row"></div>
  </div>

</div>
</div>
